<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.battle.BattleStartedFragment">



    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:text="What will be the output ?"
        android:textColor="@color/orange"
        android:fontFamily="@font/ninjagarden1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvQuestionImgContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/ivQuestionImg"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/question6_example"/>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/btnAnswerA"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:text="@string/btn_continue"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_answer_bg"
        app:layout_constraintTop_toBottomOf="@id/countDownTimer"
        android:fontFamily="@font/ninja_lazer"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBtnAnswerA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Compile error"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/white"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnAnswerB"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/btn_continue"
        android:layout_margin="24dp"
        android:background="@drawable/btn_answer_bg"
        app:layout_constraintTop_toBottomOf="@id/btnAnswerA"
        android:fontFamily="@font/ninja_lazer"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBtnAnswerB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0634"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/white"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnAnswerC"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/btn_continue"
        android:layout_margin="24dp"
        android:background="@drawable/btn_answer_bg"
        app:layout_constraintTop_toBottomOf="@id/btnAnswerB"
        android:fontFamily="@font/ninja_lazer"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBtnAnswerC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Integer can't start with zero Exception"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/white"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnAnswerD"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/btn_continue"
        android:layout_margin="24dp"
        android:background="@drawable/btn_answer_bg"
        app:layout_constraintTop_toBottomOf="@id/btnAnswerC"
        android:fontFamily="@font/ninja_lazer"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBtnAnswerD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="634"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/white"/>


    </LinearLayout>

    <Button
        android:id="@+id/btnCheckAnswerAndContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_answer"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/ninja_lazer"/>

    <params.com.stepprogressview.StepProgressView
        android:id="@+id/countDownTimer"
        android:layout_width="wrap_content"
        app:markers="10,20"
        app:totalProgress="30"
        app:currentProgress="0"
        android:layout_marginTop="12dp"
        app:markerWidth="3dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:textMargin="5dp"
        app:textFont="@font/ninja_lazer"
        app:textColor="@color/orange"
        app:textSize="15sp"
        app:markerColor="@android:color/white"
        app:progressColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/cvQuestionImgContainer"
        android:layout_marginBottom="24dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>