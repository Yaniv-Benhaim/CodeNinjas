<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.detailscreens.QuestionDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/btnContinueToQuestion">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLessonDetailTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ninja_gradient"
                android:textColor="@color/orange"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginTop="24dp"
                tools:text="Lets see if you understood" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLessonContent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="48dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvLessonDetailTitle"
                app:cardBackgroundColor="@color/grey_dark">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvLessonQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="start"
                        android:textColor="#9E9E9E"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Java is a high level, modern programming language designed in the early 1990s by Sun Microsystems, and currently owned by Oracle.\n\n Java is Platform Independent, which means that you only need to write the program once to be able to run it on a number of different platforms! Java is portable, robust, and dynamic, with the ability to fit the needs of virtually any type of application." />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/ivLessonCodeExample"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cvLessonContent"
                tools:src="@drawable/img_example_code"/>

            <LinearLayout
                android:id="@+id/btnAnswerA"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="48dp"
                android:text="@string/btn_continue"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/btn_answer_bg"
                app:layout_constraintTop_toBottomOf="@id/ivLessonCodeExample"
                android:fontFamily="@font/ninja_lazer"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBtnAnswerA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    tools:text="ANSWER A"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnAnswerB"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/btn_continue"
                android:layout_margin="24dp"
                android:background="@drawable/btn_answer_bg"
                app:layout_constraintTop_toBottomOf="@id/btnAnswerA"
                android:fontFamily="@font/ninja_lazer"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBtnAnswerB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    tools:text="ANSWER B"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnAnswerC"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/btn_continue"
                android:layout_margin="24dp"
                android:background="@drawable/btn_answer_bg"
                app:layout_constraintTop_toBottomOf="@id/btnAnswerB"
                android:fontFamily="@font/ninja_lazer"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBtnAnswerC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    tools:text="ANSWER C"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnAnswerD"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/btn_continue"
                android:layout_margin="24dp"
                android:background="@drawable/btn_answer_bg"
                app:layout_constraintTop_toBottomOf="@id/btnAnswerC"
                android:fontFamily="@font/ninja_lazer"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBtnAnswerD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    tools:text="ANSWER D"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/btnAnswerD"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnContinueToQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_continue"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/ninja_lazer"/>




</androidx.constraintlayout.widget.ConstraintLayout>