<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0E0E0E"
    tools:context=".ui.battle.FinishedBattleFragment">


    <TextView
        android:id="@+id/tvBattleSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:text="@string/battle_summary"
        android:fontFamily="@font/ninjagarden1"
        android:textColor="@color/orange"
        android:gravity="center"
        android:textSize="22sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvUserImageContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/ivProfileImageUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_example_user"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvUserImageContainer"
        app:layout_constraintStart_toStartOf="@id/cvUserImageContainer"
        app:layout_constraintEnd_toEndOf="@id/cvUserImageContainer"
        android:layout_marginTop="12dp"
        android:text="Codeninjas"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/ninjagarden1"
        android:textColor="@color/orange"
        android:gravity="center"
        android:textSize="16sp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        app:layout_constraintTop_toTopOf="@id/cvUserImageContainer"
        app:layout_constraintStart_toEndOf="@id/cvUserImageContainer"
        app:layout_constraintEnd_toStartOf="@id/cvOpponentImageContainer"
        app:layout_constraintBottom_toBottomOf="@id/cvOpponentImageContainer"
        app:cardCornerRadius="100dp"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_vs"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvOpponentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvOpponentImageContainer"
        app:layout_constraintStart_toStartOf="@id/cvOpponentImageContainer"
        app:layout_constraintEnd_toEndOf="@id/cvOpponentImageContainer"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:text="Codeninjas"
        android:fontFamily="@font/ninjagarden1"
        android:textColor="@color/orange"
        android:gravity="center"
        android:textSize="16sp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvOpponentImageContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="250dp"
        app:layout_goneMarginEnd="24dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/ivProfileImageOpponent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_example_user"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivThunder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_thunder"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:cardCornerRadius="15dp"
        android:layout_margin="24dp"
        app:cardBackgroundColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/ivThunder">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/grey_dark">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="12dp"
                    android:text="@string/score"
                    android:fontFamily="@font/ninjagarden1"
                    android:textColor="@color/orange"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <View
                    android:id="@+id/vHorizontalLine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/orange"
                    app:layout_constraintTop_toBottomOf="@id/tvScore"
                    android:layout_marginTop="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/orange"
                    app:layout_constraintTop_toBottomOf="@id/tvScore"
                    android:layout_marginTop="12dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>