<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.battle.BattleCountDownFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvUserImageContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/ivProfileImageUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_example_user"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvOpponentImageContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="250dp"
        app:layout_goneMarginEnd="24dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/ivProfileImageOpponent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_example_user"/>
    </androidx.cardview.widget.CardView>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieVersus"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="24dp"
        app:layout_constraintStart_toEndOf="@id/cvUserImageContainer"
        app:layout_constraintEnd_toStartOf="@id/cvOpponentImageContainer"
        app:layout_constraintTop_toTopOf="@id/cvUserImageContainer"
        app:layout_constraintBottom_toBottomOf="@id/cvUserImageContainer"
        app:lottie_rawRes="@raw/lottie_versus"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


    <TextView
        android:id="@+id/tvCountDown"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/lottieVersus"
        android:text="3"
        android:textColor="@color/orange"
        android:fontFamily="@font/ninjagarden3d"
        android:textSize="90sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>