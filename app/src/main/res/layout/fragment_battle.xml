<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.battle.BattleFragment">

    <TextView
        android:id="@+id/tvBattle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:fontFamily="@font/ninja_lazer"
        android:textColor="@color/orange"
        android:gravity="center"
        android:textSize="35sp"
        android:layout_marginTop="120dp"
        android:text="Battle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvBattle"
        app:layout_constraintBottom_toTopOf="@id/rvUsersAvailableForBattle">


        <TextView
            android:id="@+id/tvTopScore"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninjagarden3d"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/top_scores" />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            app:layout_constraintGuide_percent="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <TextView
            android:id="@+id/tvFirstPlace"
            app:layout_constraintBottom_toTopOf="@id/guideline2"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="20sp"
            android:text="1" />

        <TextView
            android:id="@+id/tvFirstPlaceUser"
            app:layout_constraintBottom_toTopOf="@id/guideline2"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/tvFirstPlace"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninjagarden3ditealic"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:text="AhmedB" />

        <TextView
            android:id="@+id/tvFirstPlaceUserScore"
            app:layout_constraintBottom_toTopOf="@id/guideline2"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="33 Points" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvSecondPlace"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="20sp"
            android:text="2" />

        <TextView
            android:id="@+id/tvSecondPlaceUserScore"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="33 Points" />

        <TextView
            android:id="@+id/tvSecondPlaceUser"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/tvFirstPlace"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninjagarden3ditealic"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:text="AhmedB" />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            app:layout_constraintGuide_percent="0.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvThirdPlace"
            app:layout_constraintBottom_toTopOf="@id/guideline6"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="20sp"
            android:text="3" />

        <TextView
            android:id="@+id/tvThirdPlaceUser"
            app:layout_constraintBottom_toTopOf="@id/guideline6"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/tvFirstPlace"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninjagarden3ditealic"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:text="AhmedB" />

        <TextView
            android:id="@+id/tvThirdPlaceUserScore"
            app:layout_constraintBottom_toTopOf="@id/guideline6"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="33 Points" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            app:layout_constraintGuide_percent="0.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvFourthPlace"
            app:layout_constraintBottom_toTopOf="@id/guideline8"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="20sp"
            android:text="4" />

        <TextView
            android:id="@+id/tvFourthPlaceUserScore"
            app:layout_constraintBottom_toTopOf="@id/guideline8"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="33 Points" />

        <TextView
            android:id="@+id/tvFourthPlaceUser"
            app:layout_constraintBottom_toTopOf="@id/guideline8"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/tvFirstPlace"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninjagarden3ditealic"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:text="AhmedB" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            app:layout_constraintGuide_percent="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvFifthPlace"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="20sp"
            android:text="5" />

        <TextView
            android:id="@+id/tvFifthPlaceUserScore"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninja_lazer"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="33 Points" />

        <TextView
            android:id="@+id/tvFifthPlaceUser"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/tvFirstPlace"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/ninjagarden3ditealic"
            android:textColor="@color/orange"
            android:gravity="center"
            android:textSize="16sp"
            android:text="AhmedB" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvChallengeUserContainer"
        app:layout_constraintBottom_toTopOf="@id/rvUsersAvailableForBattle"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="24dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/grey_dark"
        >

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvBattleUserImageContainer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/ivBattleUserProfileImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_example_user"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvBattleUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cvBattleUserImageContainer"
                android:fontFamily="@font/ninja_lazer"
                android:text="CodeNinjas"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/orange"
                android:layout_marginTop="12dp"/>

            <View
                android:id="@+id/lineVertical"
                android:layout_width="4dp"
                android:layout_marginTop="10dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvBattleUserName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lineHorizontal2"
                android:background="@color/white"/>

            <View
                android:id="@+id/lineHorizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvBattleUserName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white"/>


            <TextView
                android:id="@+id/tvBattleUserLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lineHorizontal"
                android:fontFamily="@font/ninja_lazer"
                android:text="@string/level"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="start"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/orange"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvBattleUserLevelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lineHorizontal"
                android:fontFamily="@font/ninja_lazer"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="@id/lineVertical"
                app:layout_constraintEnd_toEndOf="parent"
                android:ellipsize="end"
                android:gravity="start"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/orange"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvBattlesWon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvBattleUserLevel"
                android:fontFamily="@font/ninja_lazer"
                android:text="@string/battles_won"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="start"
                android:textColor="@color/orange"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvBattlesWonValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvBattleUserLevelValue"
                android:fontFamily="@font/ninja_lazer"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="@id/lineVertical"
                app:layout_constraintEnd_toEndOf="parent"
                android:ellipsize="end"
                android:gravity="start"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/orange"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvBattlesLost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvBattlesWon"
                android:fontFamily="@font/ninja_lazer"
                android:text="@string/battles_lost"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="start"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/orange"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvBattlesLostValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvBattlesWonValue"
                android:fontFamily="@font/ninja_lazer"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="@id/lineVertical"
                app:layout_constraintEnd_toEndOf="parent"
                android:ellipsize="end"
                android:gravity="start"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textColor="@color/orange"
                android:layout_marginTop="12dp"/>

            <View
                android:id="@+id/lineHorizontal2"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvBattlesLost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white"/>


            <Button
                android:id="@+id/btnChallengeOpponent"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/lineHorizontal2"
                android:layout_height="wrap_content"
                android:text="@string/challenge"
                android:background="@drawable/btn_background"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:textColor="@color/white"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/ninja_lazer"/>






        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsersAvailableForBattle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btnBattleRandomOpponent"/>

    

    <Button
        android:id="@+id/btnBattleRandomOpponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random opponent"
        android:background="@drawable/btn_background"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/white"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/ninja_lazer"/>

</androidx.constraintlayout.widget.ConstraintLayout>